// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "out": false // set this to true to hide the "out" folder with the compiled JS files
  },
  "search.exclude": {
    "out": true // set this to false to include "out" folder in search results
  },
  // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
  "typescript.tsc.autoDetect": "off",
  // 配置终端从登录 shell 继承环境变量
  "terminal.integrated.inheritEnv": true,
  "turbo-ai-rules.sources": [
    {
      "id": "ai-rules",
      "name": "ygqygq2's AI Rules",
      "gitUrl": "https://github.com/ygqygq2/ai-rules.git",
      "branch": "main",
      "enabled": true,
      "authentication": {
        "type": "none"
      }
    }
  ],
  "turbo-ai-rules.userRules": {
    "directory": ".project-rules",
    "markers": {
      "begin": "<!-- USER-RULES:BEGIN -->",
      "end": "<!-- USER-RULES:END -->"
    }
  },
  "turbo-ai-rules.adapters": {
    "cursor": {
      "enabled": true
    },
    "windsurf": {
      "enabled": false
    },
    "copilot": {
      "enabled": true
    },
    "continue": {
      "enabled": false
    },
    "cline": {
      "enabled": false
    },
    "roo-cline": {
      "enabled": false
    },
    "aider": {
      "enabled": false
    },
    "bolt": {
      "enabled": false
    },
    "qodo-gen": {
      "enabled": false
    }
  },
  "turbo-ai-rules.adapters.custom": [
    {
      "id": "trae",
      "name": "Trae",
      "enabled": true,
      "outputPath": ".trae/rules/project_rules.md",
      "outputType": "file",
      "fileExtensions": [],
      "organizeBySource": true,
      "generateIndex": true,
      "indexFileName": "index.md",
      "isRuleType": true,
      "fileTemplate": "{{rules}}"
    }
  ]
}
